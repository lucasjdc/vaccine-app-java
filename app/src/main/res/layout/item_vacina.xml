<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_nome_vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Vacina" />

    <TextView
        android:id="@+id/text_posto_vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posto da Vacina" />

    <TextView
        android:id="@+id/text_data_vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data da Vacina" />

    <TextView
        android:id="@+id/text_reforco_vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refôrço da Vacina" />
</LinearLayout>
